#!/bin/sh

if [ ! -f tests/docker/docker-compose.yml ]; then
    echo "Run this script from the root of the Serverpod repository"
    echo "I.e. util/run_tests"
    exit 1
fi

BASE=`pwd`
PCOUNT_START_DEFAULT=0
PCOUNT_START="${1:-$PCOUNT_START_DEFAULT}"

echo "### START PUBLISHING"

echo "Base directory $BASE"
echo "Start at package $PCOUNT_START"

VERSION=`cat VERSION`
VERSION=$VERSION | xargs

if test -z "$VERSION"
then
  echo "Version number is not defined"
  exit
fi

if [[ $(git diff --stat) != '' ]]; then
  echo 'Git is dirty. Please commit all changes before publishing.'
  exit
else
  echo 'Git is clean'
fi

echo "Publish Serverpod version $VERSION"

echo "Updating pubspecs"
cd $BASE
serverpod generate-pubspecs --version $VERSION --mode production

echo "Publish packages"

# cd $BASE/packages/serverpod_serialization
# dart pub publish
#
# cd $BASE/packages/serverpod_client
# dart pub publish
#
# cd $BASE/packages/serverpod_service_client
# dart pub publish
#
# cd $BASE/packages/serverpod_shared
# dart pub publish
#
# cd $BASE/tests/serverpod_test_module/serverpod_test_module_client
# dart pub publish
#
# cd $BASE/tests/serverpod_test_client
# dart pub publish
#
# cd $BASE/packages/serverpod
# dart pub publish
#
# cd $BASE/packages/serverpod_relic
# dart pub publish
#
# cd $BASE/templates/serverpod_templates
# dart pub publish
#
# cd $BASE/tools/serverpod_cli
# dart pub publish
PCOUNT=0
while read PACKAGE; do
  if (($PCOUNT >= $PCOUNT_START));
  then
    echo "### PUBLISH PACKAGE: $PCOUNT"
    echo "$PACKAGE"
    cd $BASE/$PACKAGE
    if ! dart pub publish;
    then
      break
    fi

    # Give pub.dev a chance to catch up between each package deployment
    echo ""
    sleep 1
  else
    echo "### SKIPPING PACKAGE: $PCOUNT"
    echo "$PACKAGE"
    echo ""
  fi
  PCOUNT=$((PCOUNT+1))
done <PUBLISHABLE_PACKAGES

echo "Restore pubspecs"
cd $BASE
git reset --hard HEAD

echo "dart pub get"
util/pub_get_all
